{
  "name": "hexboard",
  "version": "1.0.0",
  "description": "A TypeScript library for creating hexagonal grid-based games with Three.js rendering",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "hexagonal",
    "grid",
    "game",
    "three.js",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "three": "^0.160.0",
    "three-stdlib": "^2.36.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/three": "^0.160.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "three": "^0.160.0"
  }
}
